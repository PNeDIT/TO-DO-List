<!DOCTYPE html>

<head>
    <title>Add new task</title>
    <link href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/4.7.0/css/font-awesome.min.css" rel="stylesheet">
    <script src="https://cdnjs.cloudflare.com/ajax/libs/jquery/3.2.1/jquery.min.js"></script>
    <script src="https://stackpath.bootstrapcdn.com/bootstrap/4.3.1/js/bootstrap.bundle.min.js"></script>
    <link href="https://stackpath.bootstrapcdn.com/bootstrap/4.3.1/css/bootstrap.min.css" rel="stylesheet">
    <link href="/static/add.css" rel="stylesheet" type="text/css">
    <script>

    </script>
</head>

<body>
    <div class="row d-flex justify-content-center container" style="margin-left: auto; margin-right: auto;">
        <div class="col-md-8">
            <div class="card-hover-shadow-2x mb-3 card">
                <div class="card-header-tab card-header">
                    <% if(typeof id === 'undefined'){ %>
                        <form method="post" action="/">
                            <% } else{%>
                                <form method="post" action="/sub/<%= id %>">
                                <% } %>
                                    <label>Name:</label>
                                    <input type="text" name="name" placeholder="Name" required="true">
                                    <label>End date:</label>
                                    <input type="date" name="endDate" placeholder="Date" required="true"><br>
                                    <label>Description:</label>
                                    <input type="text" name="description" placeholder="Description" required="true">
                                    <label> Priority level:</label>
                                    <input type="range" name="priority" placeholder="Priority" min="0" max="2"
                                        required="true"><br>
                                    <label>Comment:</label>
                                    <input type="text" name="comment" placeholder="Comment">
                                    <label>Hashtag:</label>
                                    <input type="text" name="hashtag" placeholder="#">
                                    <div class="text-center"><button class=" btn btn-primary" type="submit">Add
                                            task</button></div>
                        </form>
                </div>
            </div>
        </div>
    </div>
</body>